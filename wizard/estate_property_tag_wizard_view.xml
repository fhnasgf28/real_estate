<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_cancel_appointment_form" model="ir.ui.view">
        <field name="name">estate.property.tag.wizard.form</field>
        <field name="model">estate.property.tag.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="property_tag_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_cancel" string="Cancel Appointment" type="object" class="btn-primary" data-hotkey="q"/>
                    <button special="cancel" data-hotkey="z" string="Discard" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cancel_property_tag" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.tag.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>