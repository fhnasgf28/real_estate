<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!--        form-->
        <record id="view_estate_property_type_form" model="ir.ui.view">
            <field name="name">estate.property.type.form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="statusbar" widget="statusbar" nolabel="1" options="{'clickable': '1'}"/>

                    </header>
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="description" string="Description"/>
                            <field name="property_ids" string="Property" widget="many2many_tags"/>
                            <field name="offer_ids"/>
                            <field name="offer_count"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="property_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!--        tree-->
        <record id="view_estate_property_type_list" model="ir.ui.view">
            <field name="name">estate.property.type.tree</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description" optional="show"/>
                    <field name="property_ids" widget="one2many_list"/>
                    <field name="statusbar" decoration-success="statusbar == 'done'" decoration-info="statusbar in ('draft', 'cancel')" widget="badge"/>
                </tree>
            </field>
        </record>
<!--        search-->
        <record id="view_estate_property_type_search" model="ir.ui.view">
            <field name="name">estate.property.type.search</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <search string="Estate Property Type">
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
<!--        action-->
        <record id="action_estate_property_type" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Your First Room Estate
                </p>
            </field>
        </record>
    </data>
</odoo>