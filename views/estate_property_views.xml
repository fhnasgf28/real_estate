<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        form-->
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_cancel" string="Cancel" button_states="draft,sold" type="object"/>
                        <button name="action_sold" string="Sold" button_states="draft" class="btn-primary" type="object"/>
                        <button name="action_draft" string="Set to Draft" class="btn-primary" button_draft="draft" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name"/>
                                <field name="button_state"/>
                                <field name="tag_ids" string="Property Tag" widget="many2many_tags"/>
                                <field name="property_type_id" string="Property Type"/>
                            </group>

                            <group>
                                <field name="postcode"/>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="date_availability"/>
                                <field name="selling_price"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                <group>
                                    <field name="description" widget="html"/>
                                    <field name="bedroom"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
<!--                                    <field name="state"/>-->
                                    <field name="total_area"/>
                                </group>
                                </page>
                                <page string="Offers">
                                    <field name="offer_ids"/>
                                </page>
                                <page string="Other Information">
                                    <group>
                                        <field name="buyer_id"/>
                                        <field name="salesperson_id"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!--        tree-->
        <record id="view_estate_property_list" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="postcode" string="post code"/>
                    <field name="bedroom"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" string="Available From"/>
                    <field name="property_type_id" string="Property Type Id"/>
                    <field name="tag_ids"/>
                </tree>
            </field>
        </record>
<!--        search-->
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate Property">
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Bedroom" name="Bedroom" domain="[('bedroom', '>', 2)]"/>
                    <field name="name" string="Title"/>
                    <field name="postcode"/>
                    <field name="bedroom"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <group expand="1" string="Group By">
                        <filter string="Property Name" name="name" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>
<!--        action-->
        <record id="action_real_estate" model="ir.actions.act_window">
            <field name="name">Real Estate2</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Your First Room Estate
                </p>
            </field>
        </record>
    </data>
</odoo>